#!/bin/sh

PRF=libgt-0.3.8

rm -f ${PRF}*.tar.gz && \
autoreconf -i && \
./configure && \
make clean && \
make && \
make check && \
make doc && \
make dist && \
rm -rf ./${PRF} && \
make install prefix=$(pwd)/${PRF} && \
tar -czvf ${PRF}-bin.tar.gz ./${PRF} && \
rm -rf ./${PRF} && \
mkdir -p ./${PRF}/doc && \
cp -r ./doc/html ./doc/latex/refman.pdf ./${PRF}/doc && \
tar -czvf ${PRF}-doc.tar.gz ./${PRF}
